<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/languegePopout"
                android:layout_width="246dp"
                android:layout_height="223dp"
                android:background="@drawable/rounded14_white_button"
                tools:layout_editor_absoluteX="82dp"
                tools:layout_editor_absoluteY="249dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Delete Account"
                android:textColor="#10275A"
                android:textSize="22dp"
                android:textStyle="bold"
                android:translationZ="90dp"
                app:layout_constraintEnd_toEndOf="@+id/languegePopout"
                app:layout_constraintStart_toStartOf="@+id/languegePopout"
                app:layout_constraintTop_toTopOf="@+id/languegePopout" />

            <TextView
                android:id="@+id/inputEnglish"
                android:layout_width="216dp"
                android:layout_height="87dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FFFFFF"
                android:lineSpacingExtra="8sp"
                android:text="Are you sure to delete this account ?"
                android:textAlignment="center"
                android:textColor="#10275A"
                android:textSize="16dp"
                android:textStyle="bold"
                android:translationZ="90dp"
                app:layout_constraintEnd_toEndOf="@+id/languegePopout"
                app:layout_constraintStart_toStartOf="@+id/languegePopout"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancelDeleteButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/rounded20_stroke"
                android:text="Cancel"
                android:textColor="#5B67CA"
                app:layout_constraintBottom_toBottomOf="@+id/languegePopout"
                app:layout_constraintStart_toStartOf="@+id/inputEnglish"
                app:layout_constraintTop_toBottomOf="@+id/inputEnglish" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/rounded20_purple"
                android:text="Sure"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/languegePopout"
                app:layout_constraintEnd_toEndOf="@+id/inputEnglish"
                app:layout_constraintHorizontal_bias="0.425"
                app:layout_constraintStart_toEndOf="@+id/cancelDeleteButton"
                app:layout_constraintTop_toBottomOf="@+id/inputEnglish" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>