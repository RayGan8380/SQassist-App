<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="349dp"
            android:layout_height="166dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/rounded20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button5"
            android:layout_width="349dp"
            android:layout_height="166dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="156dp"
            android:background="@drawable/rounded20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            app:layout_constraintVertical_bias="0.646" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="159dp"
            android:layout_height="96dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="3sp"
            android:text="Flavettes Effervescent VITAL Vitamin CTextView"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:layout_constraintStart_toStartOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/button2" />

        <TextView
            android:id="@+id/productDetails2"
            android:layout_width="159dp"
            android:layout_height="96dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="3sp"
            android:text=" Brand's Blackcurrant Anthocyanins with Lutein"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:translationZ="90dp"
            app:layout_constraintStart_toStartOf="@+id/button5"
            app:layout_constraintTop_toTopOf="@+id/button5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/detailsButton"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:background="@drawable/rounded14_white_button"
            android:text="Details"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/button2"
            app:layout_constraintEnd_toEndOf="@+id/productName"
            app:layout_constraintStart_toStartOf="@+id/productName"
            app:layout_constraintTop_toBottomOf="@+id/productName" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/detailsButton2"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:background="@drawable/rounded14_white_button"
            android:text="Details"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/button5"
            app:layout_constraintEnd_toEndOf="@+id/productDetails2"
            app:layout_constraintStart_toStartOf="@+id/productDetails2"
            app:layout_constraintTop_toBottomOf="@+id/productDetails2" />

        <ImageView
            android:id="@+id/imageProduct1"
            android:layout_width="133dp"
            android:layout_height="128dp"
            android:layout_marginEnd="20dp"
            android:translationZ="90dp"
            app:layout_constraintBottom_toBottomOf="@+id/button2"
            app:layout_constraintEnd_toEndOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/productName"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/weekday_weeks" />

        <ImageView
            android:id="@+id/imageProduct2"
            android:layout_width="133dp"
            android:layout_height="128dp"
            android:layout_marginEnd="20dp"
            android:translationZ="90dp"
            app:layout_constraintBottom_toBottomOf="@+id/button5"
            app:layout_constraintEnd_toEndOf="@+id/button5"
            app:layout_constraintTop_toTopOf="@+id/productDetails2"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/supplement2_1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>