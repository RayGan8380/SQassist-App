<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/languegePopout"
        android:layout_width="246dp"
        android:layout_height="223dp"
        android:background="@drawable/rounded14_white_button"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="249dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Language"
        android:textColor="#10275A"
        android:textSize="22dp"
        android:textStyle="bold"
        android:translationZ="90dp"
        app:layout_constraintEnd_toEndOf="@+id/chineseCheckBox"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/languegePopout"
        app:layout_constraintTop_toTopOf="@+id/languegePopout" />

    <TextView
        android:id="@+id/inputEnglish"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:text="English"
        android:textAlignment="viewStart"
        android:textColor="#10275A"
        android:textSize="16dp"
        android:textStyle="bold"
        android:translationZ="90dp"
        app:layout_constraintStart_toStartOf="@+id/languegePopout"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/inputEnglish3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:text="Malay"
        android:textAlignment="viewStart"
        android:textColor="#10275A"
        android:textSize="16dp"
        android:textStyle="bold"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/languegePopout"
        app:layout_constraintStart_toStartOf="@+id/inputEnglish2"
        app:layout_constraintTop_toBottomOf="@+id/inputEnglish2"
        app:layout_constraintVertical_bias="0.039" />

    <TextView
        android:id="@+id/inputEnglish2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:text="Chinese"
        android:textAlignment="viewStart"
        android:textColor="#10275A"
        android:textSize="16dp"
        android:textStyle="bold"
        android:translationZ="90dp"
        app:layout_constraintStart_toStartOf="@+id/inputEnglish"
        app:layout_constraintTop_toBottomOf="@+id/inputEnglish" />

    <CheckBox
        android:id="@+id/engCheckBox"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/inputEnglish"
        app:layout_constraintEnd_toEndOf="@+id/languegePopout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/inputEnglish"
        app:layout_constraintTop_toTopOf="@+id/inputEnglish" />

    <CheckBox
        android:id="@+id/chineseCheckBox"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/inputEnglish2"
        app:layout_constraintEnd_toEndOf="@+id/engCheckBox"
        app:layout_constraintStart_toEndOf="@+id/inputEnglish2"
        app:layout_constraintTop_toTopOf="@+id/inputEnglish2" />

    <CheckBox
        android:id="@+id/malayCheckBox"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/inputEnglish3"
        app:layout_constraintEnd_toEndOf="@+id/chineseCheckBox"
        app:layout_constraintStart_toEndOf="@+id/inputEnglish3"
        app:layout_constraintTop_toTopOf="@+id/inputEnglish3" />
</androidx.constraintlayout.widget.ConstraintLayout>