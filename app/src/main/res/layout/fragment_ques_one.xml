<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/forum_button1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="349dp"
            android:layout_height="421dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/home_page_background" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="171dp"
            android:layout_height="91dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintHorizontal_bias="0.162"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            app:srcCompat="@drawable/home_pic" />

        <TextView
            android:id="@+id/statisticHeader"
            android:layout_width="171dp"
            android:layout_height="23dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/hind_siliguri"
            android:text="When you tested positive?"
            android:textColor="#12175E"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="254dp"
            android:layout_height="39dp"
            android:ems="10"
            android:fontFamily="@font/hind_siliguri"
            android:hint="Select date ie. DDMMYYYY"
            android:inputType="number"
            android:textColor="#10275A"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/statisticHeader"
            app:layout_constraintTop_toBottomOf="@+id/statisticHeader" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Current bodt temperature?"
            android:textColor="#12175E"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/editTextDate"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

        <EditText
            android:id="@+id/editTextTemperature"
            android:layout_width="254dp"
            android:layout_height="39dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Enter your temperature ie.37.5"
            android:inputType="numberDecimal"
            android:textAlignment="viewStart"
            android:textColor="#10275A"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Current blood oxygen level?"
            android:textColor="#12175E"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/editTextTemperature"
            app:layout_constraintTop_toBottomOf="@+id/editTextTemperature" />

        <EditText
            android:id="@+id/editTextBloodOxi"
            android:layout_width="254dp"
            android:layout_height="39dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Enter your blood oxygen level ie.96.5"
            android:inputType="numberDecimal"
            android:textColor="#10275A"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ques1Btn"
            android:layout_width="205dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTintMode="multiply"
            android:fontFamily="@font/montserrat"
            android:text="Comfirm"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView7"
            app:layout_constraintHorizontal_bias="0.464"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/editTextBloodOxi" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>